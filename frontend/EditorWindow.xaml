<Window x:Class="frontend.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Tytuł" />
            <TextBox x:Name="TitleTextBox" Margin="0,0,0,10"/>
            
            <TextBlock Text="Reżyser" />
            <TextBox x:Name="DirectorTextBox" Margin="0,0,0,10"/>
            
            <TextBlock Text="Rok" />
            <TextBox x:Name="YearTextBox" Margin="0,0,0,10"/>
            
            <TextBlock Text="Ocena" />
            <TextBox x:Name="RateTextBox" Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="75" Margin="0,0,5,0" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="75" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
